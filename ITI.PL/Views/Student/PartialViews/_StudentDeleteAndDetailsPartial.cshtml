@model StudentViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	TempData["ImageName"] = Model.ImageName;
}
@if(Model.ImageName is not null)
{
	<div class="form-group d-flex justify-content-center align-items-center">
		<img src="~/Files/Images/@Model.ImageName" alt="@Model.FirstName @Model.LastName" class="img-fluid rounded-circle w-25" />
	</div>
}
<div class="form-group">
	<label class="col-form-label" asp-for="FirstName"></label>
	<input asp-for="FirstName" class="form-control" readonly />
</div>

<div class="form-group">
	<label class="col-form-label" asp-for="LastName"></label>
	<input asp-for="LastName" class="form-control" readonly />
</div>

<div class="form-group">
	<label class="col-form-label" asp-for="Address"></label>
	<input asp-for="Address" class="form-control" readonly />


</div>
<div class="form-group">
	<label class="col-form-label" asp-for="Age"></label>
	<input asp-for="Age" class="form-control" readonly />

</div>
<div class="form-group">
	<input asp-for="IsActive" class="form-check-input" readonly />
	<label class="col-form-label" asp-for="IsActive"></label>

</div>
<div class="form-group">
	<label class="col-form-label" asp-for="Email"></label>
	<input asp-for="Email" class="form-control" readonly />

</div>

<div class="form-group">
	<label class="col-form-label" asp-for="PhoneNumber"></label>
	<input asp-for="PhoneNumber" class="form-control" readonly />

</div>



<div class="form-group">

	<label class="col-form-label" asp-for="DepartmentId"></label>
	<input asp-for="DepartmentId" class="form-control" readonly />


</div>