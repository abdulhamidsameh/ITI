@model Student
@{
    ViewData["Title"] = "Edit Student";
}


<h1>Edit Student</h1>

<br />
<br />

<form asp-action="Edit">

	<div class="text-danger" asp-validation-summary="ModelOnly"></div>

	<div class="form-group">
		<label class="col-form-label" asp-for="FirstName"></label>
		<input asp-for="FirstName" class="form-control" />
		<span asp-validation-for="FirstName" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label class="col-form-label" asp-for="LastName"></label>
		<input asp-for="LastName" class="form-control" />
		<span asp-validation-for="LastName" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label class="col-form-label" asp-for="Address"></label>
		<input asp-for="Address" class="form-control" />
		<span asp-validation-for="Address" class="text-danger"></span>

	</div>
	<div class="form-group">
		<label class="col-form-label" asp-for="Age"></label>
		<input asp-for="Age" class="form-control" />
		<span asp-validation-for="Age" class="text-danger"></span>

	</div>
	<div class="form-group mt-3">
		<input type="submit" value="Save" class="btn btn-primary" /> |
		<a asp-action="Index" class="btn btn-light">Cancle</a>
	</div>

</form>

