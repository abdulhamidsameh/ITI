@model IEnumerable<Student>
@{
    ViewData["Title"] = "All Students";
}


<h1>All Students</h1>

<br />
<br />

<a class="btn btn-primary" asp-controller="Student" asp-action="Create">Create New Student</a>

<br />

@if (Model.Count() > 0)
{
	<table class="mt-3 table table-striped table-hover">

		<thead>

			<tr>
				<th>@Html.DisplayNameFor(D => D.FirstName)</th>
				<th>@Html.DisplayNameFor(D => D.LastName)</th>
				<th>@Html.DisplayNameFor(D => D.Address)</th>
				<th>@Html.DisplayNameFor(D => D.Age)</th>
				<td>Details</td>
				<td>Update</td>
				<td>Delete</td>
			</tr>

		</thead>

		<tbody>

			@foreach (var student in Model)
			{
				<tr>
					<td>@student.FirstName</td>
					<td>@student.LastName</td>
					<td>@student.Address</td>
					<td>@student.Age</td>
					<td>
						<a asp-controller="Student" asp-action="Details" asp-route-id="@student.Id" class="btn btn-warning">
							<i class="fas fa-eye"></i> Details
						</a>
					</td>
					<td>
						<a asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id" class="btn btn-success">
							<i class="fas fa-edit"></i> Update
						</a>
					</td>
					<td>
						<a asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger">
							<i class="fas fa-trash"></i> Delete
						</a>
					</td>
				</tr>
			}

		</tbody>

	</table>
}
else
{
	<div class="mt-4 alert alert-warning">
		<h3>There Is No Students :(</h3>
	</div>
}

