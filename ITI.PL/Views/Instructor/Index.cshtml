@model IEnumerable<InstructorViewModel>
@{
    ViewData["Title"] = "All Instructors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1>All Instructors</h1>

@if (TempData["Message"] is not null)
{
	<div id="myDiv">
		<div class="alert alert-success d-flex justify-content-between align-items-center">
			<div>@TempData["Message"]</div>
			<div><button onclick="Change()" id="btn" class="btn"><i class="fa-solid fa-xmark"></i></button></div>
		</div>
	</div>
}

<br />
<br />

<a class="btn btn-primary" asp-action="Create">Create New Instructor</a>

<br />

@if (Model.Count() > 0)
{
	<table class="mt-3 table table-striped table-hover">

		<thead>

			<tr>
				<th>@Html.DisplayNameFor(I => I.Name)</th>
				<th>@Html.DisplayNameFor(I => I.Bouns)</th>
				<th>@Html.DisplayNameFor(I => I.Salary)</th>
				<th>@Html.DisplayNameFor(I => I.Address)</th>
				<th>@Html.DisplayNameFor(I => I.HourRate)</th>
				<th>@Html.DisplayNameFor(I => I.Department)</th>
				<td>Details</td>
				<td>Update</td>
				<td>Delete</td>
			</tr>

		</thead>

		<tbody>

			@foreach (var instructor in Model)
			{
				<tr>

					<td>@instructor.Name</td>
					<td>@instructor.Bouns</td>
					<td>@instructor.Salary</td>
					<td>@instructor.Address</td>
					<td>@instructor.HourRate</td>
					<th>@instructor.Department?.Name</th>
					<partial name="_ButtonsPartial" model="instructor.Id"></partial>

				</tr>
			}

		</tbody>

	</table>
}
else
{
	<div class="mt-4 alert alert-warning">
		<h3>There Is No Instructors :(</h3>
	</div>
}



