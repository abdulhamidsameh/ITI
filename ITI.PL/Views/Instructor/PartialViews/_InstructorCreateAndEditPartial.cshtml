@model InstructorViewModel
@inject IUnitOfWork _unitOfWork
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	var departments = new SelectList(_unitOfWork.Repository<Department>().GetAll(), nameof(Department.Id), nameof(Department.Name));
}

<div class="form-group">
	<label class="col-form-label" asp-for="Name"></label>
	<input asp-for="Name" class="form-control" />
	<span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
	<label class="col-form-label" asp-for="Bouns"></label>
	<input asp-for="Bouns" class="form-control" />
	<span asp-validation-for="Bouns" class="text-danger"></span>
</div>

<div class="form-group">
	<label class="col-form-label" asp-for="Address"></label>
	<input asp-for="Address" class="form-control" />
	<span asp-validation-for="Address" class="text-danger"></span>

</div>
<div class="form-group">
	<label class="col-form-label" asp-for="Salary"></label>
	<input asp-for="Salary" class="form-control" />
	<span asp-validation-for="Salary" class="text-danger"></span>

</div>

<div class="form-group">
	<label class="col-form-label" asp-for="HourRate"></label>
	<input asp-for="HourRate" class="form-control" />
	<span asp-validation-for="HourRate" class="text-danger"></span>

</div>




<div class="form-group">
	<label class="col-form-label" asp-for="Department"></label>
	<select class="form-control" asp-for="DepartmentId" asp-items="departments">

		<option value="@null"> -- Select Department --</option>

	</select>

</div>