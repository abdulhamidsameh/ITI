@model SignInViewModel
@{
	ViewData["Title"] = "Sign In";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="ModelOnly">
		</div>
		<form asp-action="SignIn">
			<input class="text email inputStyle" asp-for="Email" placeholder="Email" required="">

			<input class="text inputStyle" asp-for="Password" placeholder="Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="RememberMe" class="checkbox">
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<p>Do have an Account? <a asp-action="SignUp"> Register Now!</a></p>
	</div>
</div>
@section ValidationScriptSection {
	<partial name="_ValidationScriptsPartial"></partial>
}